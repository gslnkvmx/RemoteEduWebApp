@page
@model RemoteEduApp.Pages.Teacher.CourseModel
@{
}

@if (Model.ErrorMessage.Length > 0)
{
    <div class="mt-5 text-center alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}
else{
<div class="container px-5">

    <div class="row row-cols row-cols-md-3 mx-xl-5 gy-5 my-0">

        @foreach (var content in Model.ContentList)
        {
            <div class="col d-flex  justify-content-center">
                <div class="card h-100 text-center rounded shadow-sm" style="width: 18rem; height:250px">
                    <div class="card-header  text-body-secondary" style="font-size:small; color:gray">
                        @if (String.Equals(content.Type.Replace(" ", ""), "Лекция"))
                        {
                            <a href="/Teacher/Content?id=@content.Id" class="stretched-link" style="color:forestgreen; font-weight:bold; font-size:medium">@content.Type</a>
                        }
                        else if (content.Type.Replace(" ", "") == "ДЗ")
                        {
                            <a href="/Teacher/Content?id=@content.Id" class="stretched-link" style="color:blue; font-weight:bold; font-size:medium">@content.Type</a>
                        }
                    </div>
                    <div class="card-body">
                        <h5>@content.Name</h5>
                    </div>
                    <div class="card-footer  text-body-secondary" style="font-size:medium; color:gray">
                        @content.DateOfAdding.ToShortDateString()
                    </div>
                </div>
            </div>
        }

            <div class="col d-flex justify-content-center">
                <div class="card h-100 text-center rounded shadow-sm" style="width: 18rem; height:250px">
                        <div class="card-body">                
                            <img src="~/images/plus.svg" class="card-img-top mt-3" alt="..." style="height:80px; width:80px">
                        <div class="text-black card-title">
                            <h5 class="p-1">
                                Добавить материал
                            </h5>
                        </div>
                        </div>
                    </div>
            </div>

            <div class="row mb-5"></div>
    </div>
</div>
}