@page
@model RemoteEduApp.Pages.Student.ContentModel
@{
}

<style>
    button {
        border-radius: 5px;
        color: lightgray;
        padding-top: 8px;
        padding-bottom: 8px;
        padding-left: 16px;
        padding-right: 16px;
        cursor: pointer;
        box-shadow: 3px 3px 5px rgba(0, 0, 0, 0.3);
    }

        button:active {
            margin-top: 3px;
            margin-left: 3px;
            box-shadow: none;
        }
</style>

@if (Model.ErrorMessage.Length > 0)
{
    <div class="mt-5 text-center alert alert-warning alert-dismissible fade show" role="alert">
        <strong>@Model.ErrorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
    </div>
}

else
{
<div class="container px-5">
        @if (!string.IsNullOrEmpty(Model.PageContent.Attachment))
        {
            <div class="row mt-5 mx-xl-5" style="border:1px solid; border-radius:10px; border-color:lightgray; height:600px">
                <div class="flexible-container">
                    <iframe src="@Model.PageContent.Attachment" title="webviewer" frameborder="0" width="100%" height="100%"></iframe>
                </div>
            </div>
        }

    <div class="row mt-2 p-2 text-center">
        <h5>@Model.PageContent.Name</h5>
    </div>

    <div class="row mt-3 p-3 mx-xl-5" style="border:1px solid; border-radius:10px; border-color:lightgray">
            <div class="d-flex justify-content-between">
                <p class="mb-1" style="color:gray">@Model.PageContent.DateOfAdding.ToShortDateString()  &nbsp; &nbsp;@Model.TeacherName</p>

                <div>
                    <button type="button" class="btn btn-light p-1 me-2">
                        <img src="~/images/SmileEmote.png" style="height:20px; width:auto" class="p-0" />
                    </button>

                    <button type="button" class="btn btn-light p-1">
                        <img src="~/images/CryEmote.png" style="height:20px; width:auto" class="p-0" />
                    </button>
                </div>
        </div>
        <p>@Model.PageContent.Description</p>
    </div>
</div>
}

<div class="row mb-5"></div>